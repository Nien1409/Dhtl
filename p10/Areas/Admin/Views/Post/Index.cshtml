@model PagedList.IPagedList<Model.EF.Posts>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4>Danh sách Bài viết</h4>
</div>
<hr />
<div class="container-fluid">
    <button class="btn btn-dark"><a href="/Admin/Post/Create">Thêm mới Post</a></button>
</div>
<div class="col-lg-12">
    <div class="container-fluid px-4">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-wrap">
                            <table class="table">
                                <thead class="thead-dark">

                                    <tr>
                                        <td>#ID</td>
                                        <td>Tiêu đề</td>
                                        <td>Date</td>
                                        <td>Trạng thái</td>
                                        <td></td>

                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.PostsID</td>
                                            <td>@item.Title</td>
                                            <td>@item.Published</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <a href="/Admin/Post/Edit/@item.PostsID">Sửa</a>
                                                |
                                                @Ajax.ActionLink("Xóa", "DeletePost", new { @id = item.PostsID }, new AjaxOptions
                                          {

                                              Confirm = "Bạn có muốn xóa bản ghi này",
                                              OnComplete = "$('#row_" + item.PostsID + "').remove()",
                                              HttpMethod = "Delete"
                                          })

                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>

                            <div>

                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
</div>