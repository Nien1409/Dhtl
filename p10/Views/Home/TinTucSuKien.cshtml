@model PagedList.IPagedList<Model.EF.Posts>
@using PagedList.Mvc
@{
    ViewBag.Title = "TinTucSuKien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-view" style="padding: 0">
    <div class="news-container" id="flex-grow" style="opacity: 1;">
        <div class="news-element1 flex-grow-ele1" style="flex-grow: 1">

            <div>
                <ul class="breadcrumb">
                    <li><a href="/home">Trang chủ</a></li>
                    <li style="color:black"> Tin Tức Sự Kiện</li>
                </ul>
            </div>
            <div>
                <h2 style="color:black">Đào tạo</h2>
                @foreach (var item in Model)
                {


                    <div class="itemnews-container" id="flex-grow" style="display: flex; border: 2px solid silver; border-radius: 15px; margin-bottom: 20px">
                        <div class="itemnews-element flex-grow-ele1"
                             style="flex-grow: 1;
                                      margin: 1px;
                                      min-height: 40px;
                                      display: flex;">
                            <div style="padding-right:50px; border-radius: 15px;">
                                <a href="#"><img src="@item.Image" style="width: 200px; border-radius: 15px; height: 200px; display: block; border: 1px solid silver;"></a>
                            </div>
                        </div>
                        <hr />
                        <div class="itemnews-element flex-grow-ele2"
                             style="flex-grow: 1;
                                    margin: 1px;
                                    min-height: 40px;
                                    display: flex;">
                            <div class="">
                                <h4><a style="color:black" href="#">@item.Title</a></h4>
                              
                                <p style="color: black;">@item.Sumary</p>
                                <h6>><a href="/Home/DetailTinTucSuKien/@item.PostsID">Xem thêm</a></h6>
                            </div>
                        </div>
                    </div>
                }


                <div>

                    @Html.PagedListPager(Model, page => Url.Action("TinTucSuKien", new { page }))
                </div>

            </div>
        </div>

        <!-- sidebar -->
        <div class="news-element2 flex-grow-ele2" style="flex-grow: 1; margin-left: 75px">
            <ul style="padding: 10%">
                <h2 class="texttitle-sidebar">Đào tạo</h2>
                <li class="text-sidebar">Khoa Công nghệ thông tin</li>
                <hr>
                <li class="text-sidebar">Khoa Kĩ thuật phần mềm</li>
                <hr>
                <li class="text-sidebar">Khoa Trí tuệ nhân tạo</li>
                <hr>
                <li class="text-sidebar">Khoa Hệ thống thông tin</li>
                <hr>
            </ul>
        </div>
    </div>

    <script src="~/Assets/TinTucSuKien/js/cbpAnimatedHeader.js"></script>
    <script src="~/Assets/TinTucSuKien/js/classie.js"></script>
